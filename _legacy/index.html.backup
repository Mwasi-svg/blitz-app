<html lang="en" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blitz | The Future of Connection</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- React & Framer Motion -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/framer-motion@10.16.4/dist/framer-motion.js"></script>

    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <!-- Iconify -->
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    letterSpacing: {
                        tight: '-0.02em',
                        tighter: '-0.04em',
                    },
                    colors: {
                        blitz: {
                            bg: '#0B0F14',      // Midnight Black
                            surface: '#0E1623', // Deep Navy
                            border: '#1C2330',  // Soft Graphite
                            text: '#94A3B8',    // Cool Gray
                            white: '#F8FAFC',
                            accent: '#3B82F6',  // Electric Blue
                            highlight: '#22D3EE', // Neon Cyan
                        }
                    },
                    backgroundImage: {
                        'gradient-radial': 'radial-gradient(var(--tw-gradient-stops))',
                    },
                    animation: {
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                    }
                }
            }
        }
    </script>

    <style>
        body {
            background-color: #0B0F14;
            color: #F8FAFC;
            -webkit-font-smoothing: antialiased;
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #0B0F14;
        }

        ::-webkit-scrollbar-thumb {
            background: #1C2330;
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #334155;
        }

        .glass {
            background: rgba(11, 16, 22, 0.7);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .premium-card {
            background: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .premium-card:hover {
            border-color: rgba(255, 255, 255, 0.1);
            background: linear-gradient(145deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.02) 100%);
            box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.1), 0 20px 40px -10px rgba(0, 0, 0, 0.5);
        }

        .card-glow {
            opacity: 0;
            transition: opacity 0.4s ease;
            background: radial-gradient(800px circle at var(--mouse-x) var(--mouse-y), rgba(59, 130, 246, 0.15), transparent 40%);
        }

        .premium-card:hover .card-glow {
            opacity: 1;
        }

        .text-glow {
            text-shadow: 0 0 40px rgba(59, 130, 246, 0.4);
        }

        /* Hero Carousel Animations */
        @keyframes slideProgress {
            0% {
                width: 0%;
            }

            100% {
                width: 100%;
            }
        }

        .progress-bar-active {
            animation: slideProgress 5s linear forwards;
        }
    </style>
</head>

<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;
        const { motion, AnimatePresence } = window.Motion;

        const Icon = ({ icon, className }) => (
            <iconify-icon icon={icon} class={className} style={{ fontSize: '1.5em' }}></iconify-icon>
        );

        // --- Components ---

        const Header = () => {
            const [scrolled, setScrolled] = useState(false);
            useEffect(() => {
                const onScroll = () => setScrolled(window.scrollY > 20);
                window.addEventListener('scroll', onScroll);
                return () => window.removeEventListener('scroll', onScroll);
            }, []);

            return (
                <motion.nav
                    initial={{ y: -100 }} animate={{ y: 0 }}
                    className={`fixed top-0 w-full z-50 transition-all duration-300 ${scrolled ? 'glass py-3 border-b border-white/5' : 'py-6 bg-transparent'}`}
                >
                    <div className="max-w-7xl mx-auto px-6 flex items-center justify-between">
                        <div className="flex items-center gap-2">
                            <div className="w-8 h-8 rounded-lg bg-blue-500 flex items-center justify-center shadow-[0_0_15px_rgba(59,130,246,0.5)]">
                                <Icon icon="solar:infinity-linear" className="text-white text-sm" />
                            </div>
                            <span className="font-semibold tracking-tight text-white text-lg">Blitz</span>
                        </div>
                        <div className="hidden md:flex items-center gap-8 text-sm text-slate-400 font-medium">
                            <a href="#features" className="hover:text-blue-400 transition-colors">Features</a>
                            <a href="#" className="hover:text-blue-400 transition-colors">Platforms</a>
                            <a href="#" className="hover:text-blue-400 transition-colors">Contact</a>
                        </div>
                        <div className="flex items-center gap-4">

                            <button className="bg-white text-black px-5 py-2 rounded-full text-xs font-semibold hover:bg-blue-50 hover:text-blue-600 transition-colors">
                                Get Started Free
                            </button>
                        </div>
                    </div>
                </motion.nav>
            );
        };

        // Instant Messaging Animation Component
        const InstantMessagingAnimation = () => {
            const [messageSequence, setMessageSequence] = useState(0);
            const [showTyping, setShowTyping] = useState(false);

            const messages = [
                { id: 1, text: "Meeting in 5?", sender: "them", delay: 0 },
                { id: 2, text: "On my way", sender: "you", delay: 800 },
                { id: 3, text: "Perfect", sender: "them", delay: 1400 },
                { id: 4, text: "See you there", sender: "you", delay: 2000 },
            ];

            useEffect(() => {
                const typingTimer = setTimeout(() => setShowTyping(true), 600);
                const hideTypingTimer = setTimeout(() => setShowTyping(false), 750);

                const intervals = messages.map((msg, idx) =>
                    setTimeout(() => setMessageSequence(idx + 1), msg.delay)
                );

                const resetTimer = setTimeout(() => {
                    setMessageSequence(0);
                    setShowTyping(false);
                }, 2800);

                return () => {
                    clearTimeout(typingTimer);
                    clearTimeout(hideTypingTimer);
                    clearTimeout(resetTimer);
                    intervals.forEach(clearTimeout);
                };
            }, [messageSequence === 0]);

            return (
                <div className="relative w-full h-full" style={{ perspective: '1200px' }}>
                    {/* Floating 3D Interface Container */}
                    <motion.div
                        initial={{ rotateY: 2, rotateX: -1 }}
                        animate={{
                            rotateY: [2, -1, 2],
                            rotateX: [-1, 0.5, -1]
                        }}
                        transition={{
                            duration: 8,
                            repeat: Infinity,
                            ease: "easeInOut"
                        }}
                        className="absolute inset-0 flex items-center justify-center"
                        style={{ transformStyle: 'preserve-3d' }}
                    >
                        {/* Dark Minimal Chat Interface */}
                        <div className="relative w-full max-w-[90%] h-[85%] bg-[#0A0E13] rounded-2xl border border-white/[0.08] overflow-hidden"
                            style={{
                                boxShadow: '0 20px 60px rgba(0,0,0,0.5), 0 0 1px rgba(255,255,255,0.1) inset',
                                transform: 'translateZ(20px)'
                            }}>

                            {/* Chat Header */}
                            <div className="h-14 border-b border-white/[0.05] flex items-center px-4 bg-white/[0.02]">
                                <div className="flex items-center gap-3 flex-1">
                                    <div className="w-8 h-8 rounded-full bg-gradient-to-br from-cyan-400/20 to-blue-500/20 border border-cyan-400/30 flex items-center justify-center">
                                        <div className="w-3 h-3 rounded-full bg-cyan-400"></div>
                                    </div>
                                    <div className="flex-1">
                                        <div className="w-20 h-2 bg-white/10 rounded-full"></div>
                                    </div>
                                </div>
                                <div className="w-2 h-2 rounded-full bg-emerald-400 shadow-[0_0_8px_rgba(52,211,153,0.6)]"></div>
                            </div>

                            {/* Messages Container */}
                            <div className="relative h-[calc(100%-7rem)] p-4 overflow-hidden">
                                <div className="space-y-3 pt-2">
                                    <AnimatePresence>
                                        {messages.slice(0, messageSequence).map((msg, idx) => (
                                            <motion.div
                                                key={msg.id}
                                                initial={{
                                                    x: msg.sender === 'you' ? 40 : -40,
                                                    opacity: 0,
                                                    filter: 'blur(4px)'
                                                }}
                                                animate={{
                                                    x: 0,
                                                    opacity: 1,
                                                    filter: 'blur(0px)'
                                                }}
                                                exit={{ opacity: 0 }}
                                                transition={{
                                                    duration: 0.15,
                                                    ease: [0.4, 0, 0.2, 1] // Sharp ease-out
                                                }}
                                                className={`flex ${msg.sender === 'you' ? 'justify-end' : 'justify-start'}`}
                                            >
                                                <div className="flex flex-col gap-1">
                                                    <div
                                                        className={`
                                                            px-4 py-2.5 rounded-2xl max-w-[75%] relative
                                                            ${msg.sender === 'you'
                                                                ? 'bg-gradient-to-br from-[#3B82F6] to-[#2563EB] text-white rounded-br-md'
                                                                : 'bg-white/[0.06] text-slate-200 rounded-bl-md border border-white/[0.08]'
                                                            }
                                                        `}
                                                        style={{
                                                            boxShadow: msg.sender === 'you'
                                                                ? '0 0 20px rgba(59,130,246,0.25), 0 2px 8px rgba(0,0,0,0.3)'
                                                                : '0 2px 8px rgba(0,0,0,0.2)'
                                                        }}
                                                    >
                                                        <span className="text-sm font-medium tracking-tight">{msg.text}</span>

                                                        {/* Instant Delivery Indicator */}
                                                        {msg.sender === 'you' && (
                                                            <motion.div
                                                                initial={{ scale: 0, opacity: 0 }}
                                                                animate={{ scale: 1, opacity: 1 }}
                                                                transition={{ delay: 0.05, duration: 0.12 }}
                                                                className="absolute -bottom-1 -right-1 w-4 h-4 rounded-full bg-[#22D3EE] flex items-center justify-center"
                                                                style={{ boxShadow: '0 0 12px rgba(34,211,238,0.5)' }}
                                                            >
                                                                <svg className="w-2.5 h-2.5 text-[#0A0E13]" viewBox="0 0 12 12" fill="none">
                                                                    <path d="M2 6L5 9L10 3" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" />
                                                                </svg>
                                                            </motion.div>
                                                        )}
                                                    </div>

                                                    {/* Timestamp with cyan highlight */}
                                                    {msg.sender === 'you' && (
                                                        <motion.div
                                                            initial={{ opacity: 0 }}
                                                            animate={{ opacity: 1 }}
                                                            transition={{ delay: 0.1 }}
                                                            className="text-[10px] text-cyan-400/60 self-end px-1"
                                                        >
                                                            Just now
                                                        </motion.div>
                                                    )}
                                                </div>
                                            </motion.div>
                                        ))}
                                    </AnimatePresence>

                                    {/* Typing Indicator */}
                                    <AnimatePresence>
                                        {showTyping && messageSequence < messages.length && (
                                            <motion.div
                                                initial={{ opacity: 0, y: 10 }}
                                                animate={{ opacity: 1, y: 0 }}
                                                exit={{ opacity: 0, scale: 0.9 }}
                                                transition={{ duration: 0.1 }}
                                                className="flex justify-start"
                                            >
                                                <div className="px-4 py-3 rounded-2xl rounded-bl-md bg-white/[0.06] border border-white/[0.08] flex gap-1">
                                                    {[0, 1, 2].map((i) => (
                                                        <motion.div
                                                            key={i}
                                                            animate={{
                                                                opacity: [0.3, 1, 0.3],
                                                                y: [0, -2, 0]
                                                            }}
                                                            transition={{
                                                                duration: 0.6,
                                                                repeat: Infinity,
                                                                delay: i * 0.15
                                                            }}
                                                            className="w-1.5 h-1.5 rounded-full bg-slate-400"
                                                        />
                                                    ))}
                                                </div>
                                            </motion.div>
                                        )}
                                    </AnimatePresence>
                                </div>

                                {/* Subtle activity indicators in background */}
                                <motion.div
                                    animate={{ opacity: [0.03, 0.06, 0.03] }}
                                    transition={{ duration: 2, repeat: Infinity }}
                                    className="absolute top-0 right-0 w-32 h-32 bg-blue-500 blur-[60px] rounded-full pointer-events-none"
                                />
                            </div>

                            {/* Input Bar - Minimal */}
                            <div className="absolute bottom-0 left-0 right-0 h-14 border-t border-white/[0.05] bg-white/[0.02] px-4 flex items-center gap-3">
                                <div className="flex-1 h-9 bg-white/[0.04] border border-white/[0.06] rounded-lg px-3 flex items-center">
                                    <div className="w-20 h-1.5 bg-white/[0.08] rounded-full"></div>
                                </div>
                                <div className="w-9 h-9 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center"
                                    style={{ boxShadow: '0 0 16px rgba(59,130,246,0.4)' }}>
                                    <svg className="w-4 h-4 text-white" viewBox="0 0 16 16" fill="currentColor">
                                        <path d="M2 2L14 8L2 14V9L10 8L2 7V2Z" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        {/* Floating depth layers with parallax */}
                        <motion.div
                            className="absolute inset-0 pointer-events-none"
                            animate={{
                                x: [-2, 2, -2],
                                y: [1, -1, 1]
                            }}
                            transition={{
                                duration: 6,
                                repeat: Infinity,
                                ease: "easeInOut"
                            }}
                        >
                            <div className="absolute top-[15%] right-[8%] w-12 h-12 rounded-lg bg-white/[0.02] border border-white/[0.05]"
                                style={{ transform: 'translateZ(40px)' }}></div>
                            <div className="absolute bottom-[20%] left-[5%] w-8 h-8 rounded-full bg-cyan-500/[0.05] border border-cyan-400/10"
                                style={{ transform: 'translateZ(30px)', boxShadow: '0 0 20px rgba(34,211,238,0.1)' }}></div>
                        </motion.div>
                    </motion.div>

                    {/* Premium depth glow */}
                    <div className="absolute inset-0 bg-gradient-to-t from-blue-500/5 via-transparent to-transparent blur-xl pointer-events-none"></div>
                </div>
            );
        };

        const HeroCarousel = () => {
            const [activeSlide, setActiveSlide] = useState(0);
            const slides = [
                {
                    id: 1,
                    tag: "Real-time Messaging",
                    title: "Messaging at blitz \nspeed.",
                    description: "Low latency communication for teams that move fast.",
                    visual: "speed",
                    color: "bg-blue-500"
                },
                {
                    id: 2,
                    tag: "Built on trust. Backed by encryption.",
                    title: "Privacy is not\noptional.",
                    description: "Real time end-to-end encryption. Your data stays yours.",
                    visual: "security",
                    color: "bg-indigo-500"
                },
                {
                    id: 3,
                    tag: "Always in Sync",
                    title: "Never miss a message. Never lose \nmomentum.",
                    description: "Channels, threads, and audio huddles in one fluid interface. Stop switching context, start getting work done.",
                    visual: "collab",
                    color: "bg-cyan-500"
                }
            ];

            useEffect(() => {
                const timer = setInterval(() => {
                    setActiveSlide((prev) => (prev + 1) % slides.length);
                }, 5000);
                return () => clearInterval(timer);
            }, []);

            return (
                <section className="relative min-h-[850px] lg:h-screen pt-24 pb-12 flex flex-col justify-center overflow-hidden">
                    {/* Dynamic Ambient Background */}
                    <AnimatePresence mode="popLayout">
                        <motion.div
                            key={activeSlide}
                            initial={{ opacity: 0 }}
                            animate={{ opacity: 0.4 }}
                            exit={{ opacity: 0 }}
                            transition={{ duration: 1.5 }}
                            className="absolute top-[-20%] left-[-10%] w-[120%] h-[120%] bg-gradient-radial from-blue-900/30 via-[#0B0F14] to-[#0B0F14] blur-[100px] pointer-events-none"
                        />
                    </AnimatePresence>
                    <div className="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 pointer-events-none"></div>

                    <div className="max-w-7xl mx-auto w-full px-6 grid lg:grid-cols-12 gap-12 lg:gap-8 items-center relative z-10">

                        {/* Text Content */}
                        <div className="lg:col-span-6 flex flex-col justify-center order-2 lg:order-1">
                            <AnimatePresence mode="wait">
                                <motion.div
                                    key={activeSlide}
                                    initial={{ opacity: 0, y: 20, filter: "blur(10px)" }}
                                    animate={{ opacity: 1, y: 0, filter: "blur(0px)" }}
                                    exit={{ opacity: 0, y: -20, filter: "blur(10px)" }}
                                    transition={{ duration: 0.5, ease: "easeOut" }}
                                >
                                    <div className="flex items-center gap-3 mb-8">
                                        <span className="px-3 py-1 rounded-full text-[10px] font-bold tracking-wider uppercase bg-blue-500/10 border border-blue-500/20 text-blue-400">
                                            {slides[activeSlide].tag}
                                        </span>
                                    </div>

                                    <h1 className="text-5xl lg:text-7xl font-semibold tracking-tighter text-white leading-[1.05] mb-6">
                                        {slides[activeSlide].title.split('\n').map((line, i) => (
                                            <span key={i} className="block">{line}</span>
                                        ))}
                                    </h1>

                                    <p className="text-lg text-slate-400 leading-relaxed max-w-lg mb-10">
                                        {slides[activeSlide].description}
                                    </p>
                                </motion.div>
                            </AnimatePresence>

                            <div className="flex items-center gap-4 mb-16">
                                <button className="bg-blue-600 hover:bg-blue-500 text-white px-8 py-4 rounded-full text-sm font-semibold tracking-wide transition-all shadow-[0_0_20px_rgba(37,99,235,0.3)] hover:shadow-[0_0_30px_rgba(37,99,235,0.5)]">
                                    Get Started Free
                                </button>
                                <button className="px-8 py-4 rounded-full text-sm font-semibold text-slate-300 border border-white/10 hover:bg-white/5 transition-colors flex items-center gap-2">
                                    <Icon icon="solar:play-circle-linear" />
                                    Features
                                </button>
                            </div>

                            {/* Progress Indicators */}
                            <div className="flex gap-4">
                                {slides.map((slide, index) => (
                                    <div
                                        key={index}
                                        onClick={() => setActiveSlide(index)}
                                        className="h-1 flex-1 bg-white/10 rounded-full overflow-hidden cursor-pointer group relative"
                                    >
                                        <div className={`absolute inset-0 bg-white/20 group-hover:bg-white/30 transition-colors`}></div>
                                        {index === activeSlide && (
                                            <div className="h-full bg-blue-500 rounded-full progress-bar-active"></div>
                                        )}
                                    </div>
                                ))}
                            </div>
                        </div>

                        {/* Interactive Visual Canvas */}
                        <div className="lg:col-span-6 h-[400px] lg:h-[600px] relative order-1 lg:order-2 perspective-1000">
                            <AnimatePresence mode="wait">
                                <motion.div
                                    key={activeSlide}
                                    initial={{ opacity: 0, x: 50, rotateY: 5 }}
                                    animate={{ opacity: 1, x: 0, rotateY: 0 }}
                                    exit={{ opacity: 0, x: -50, rotateY: -5 }}
                                    transition={{ duration: 0.6, ease: "circOut" }}
                                    className="w-full h-full flex items-center justify-center"
                                >
                                    {/* MOCKUP CONTAINER */}
                                    <div className="relative w-full max-w-md aspect-[3/4] lg:aspect-square bg-[#0E1623] rounded-3xl border border-white/10 shadow-2xl overflow-hidden flex flex-col ring-1 ring-white/5">

                                        {/* Mockup Header */}
                                        <div className="h-12 border-b border-white/5 flex items-center px-4 gap-3 bg-white/[0.02]">
                                            <div className="flex gap-1.5">
                                                <div className="w-2.5 h-2.5 rounded-full bg-red-500/20"></div>
                                                <div className="w-2.5 h-2.5 rounded-full bg-yellow-500/20"></div>
                                                <div className="w-2.5 h-2.5 rounded-full bg-green-500/20"></div>
                                            </div>
                                            <div className="ml-auto w-24 h-1.5 rounded-full bg-white/5"></div>
                                        </div>

                                        {/* Dynamic Slide Content */}
                                        <div className="flex-1 p-6 relative overflow-hidden">

                                            {/* Slide 1: Instant Messaging Animation */}
                                            {slides[activeSlide].visual === 'speed' && (
                                                <InstantMessagingAnimation />
                                            )}

                                            {/* Slide 2: Security (Shield & Lock) */}
                                            {slides[activeSlide].visual === 'security' && (
                                                <div className="h-full flex flex-col items-center justify-center text-center">
                                                    <motion.div
                                                        initial={{ scale: 0.8, opacity: 0 }}
                                                        animate={{ scale: 1, opacity: 1 }}
                                                        transition={{ type: "spring" }}
                                                        className="w-24 h-24 rounded-full bg-blue-500/10 border border-blue-500/30 flex items-center justify-center mb-6"
                                                    >
                                                        <Icon icon="solar:shield-check-linear" className="text-4xl text-blue-500" />
                                                    </motion.div>
                                                    <motion.div className="space-y-3 w-full max-w-[200px]">
                                                        <div className="h-2 w-full bg-white/10 rounded-full"></div>
                                                        <div className="h-2 w-2/3 bg-white/10 rounded-full mx-auto"></div>
                                                    </motion.div>
                                                    <div className="mt-8 px-4 py-2 bg-green-500/10 border border-green-500/20 rounded-lg text-green-400 text-xs font-mono">
                                                        AES-256 ENCRYPTED
                                                    </div>
                                                </div>
                                            )}

                                            {/* Slide 3: Collab (Grid of users) */}
                                            {slides[activeSlide].visual === 'collab' && (
                                                <div className="grid grid-cols-2 gap-3 h-full content-center">
                                                    {[1, 2, 3, 4].map((i) => (
                                                        <motion.div
                                                            key={i}
                                                            initial={{ scale: 0 }}
                                                            animate={{ scale: 1 }}
                                                            transition={{ delay: i * 0.1 }}
                                                            className="aspect-video bg-white/5 rounded-xl border border-white/10 relative overflow-hidden group"
                                                        >
                                                            <div className="absolute inset-0 flex items-center justify-center">
                                                                <div className="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-slate-500">
                                                                    <Icon icon="solar:user-circle-linear" />
                                                                </div>
                                                            </div>
                                                            <div className="absolute bottom-2 left-2 w-2 h-2 rounded-full bg-green-500"></div>
                                                        </motion.div>
                                                    ))}
                                                </div>
                                            )}
                                        </div>
                                    </div>

                                    {/* Decorative Blur behind visual */}
                                    <div className={`absolute inset-0 bg-blue-500 blur-[100px] opacity-20 -z-10`}></div>
                                </motion.div>
                            </AnimatePresence>
                        </div>
                    </div>
                </section>
            );
        };

        const Card = ({ children, className }) => {
            const cardRef = useRef(null);

            const handleMouseMove = (e) => {
